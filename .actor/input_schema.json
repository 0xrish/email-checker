{
    "title": "Email checker input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "emails": {
            "title": "Emails to verify",
            "type": "array",
            "description": "List of email addresses to verify using the native Rust backend.",
            "items": {
                "type": "string",
                "format": "email"
            }
        },
        "from_email": {
            "title": "From Email",
            "type": "string",
            "description": "Optional email address to use in SMTP FROM command"
        },
        "hello_name": {
            "title": "Hello Name",
            "type": "string",
            "description": "Optional hostname to use in SMTP EHLO command"
        },
        "proxy": {
            "title": "Optional SOCKS5 proxy configuration",
            "type": "object",
            "description": "Proxy configuration for email verification.",
            "properties": {
                "host": {
                    "type": "string",
                    "title": "Host"
                },
                "port": {
                    "type": "integer",
                    "title": "Port",
                    "default": 1080
                },
                "username": {
                    "type": "string",
                    "title": "Username"
                },
                "password": {
                    "type": "string",
                    "title": "Password"
                }
            }
        }
    },
    "required": ["emails"]
}


