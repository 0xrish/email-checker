{
    "title": "Email checker input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "emails": {
            "title": "Emails to verify",
            "type": "array",
            "description": "List of email addresses to verify using the native Rust backend.",
            "editor": "json",
            "items": {
                "type": "string"
            }
        },
        "from_email": {
            "title": "From Email",
            "type": "string",
            "description": "Optional email address to use in SMTP FROM command.",
            "editor": "textfield"
        },
        "hello_name": {
            "title": "Hello Name",
            "type": "string",
            "description": "Optional hostname to use in SMTP HELO/EHLO command.",
            "editor": "textfield"
        },
        "proxy": {
            "title": "Optional SOCKS5 proxy configuration",
            "type": "object",
            "description": "Proxy configuration for email verification.",
            "properties": {
                "host": {
                    "type": "string",
                    "title": "Host",
                    "description": "SOCKS5 proxy hostname or IP address.",
                    "editor": "textfield"
                },
                "port": {
                    "type": "integer",
                    "title": "Port",
                    "description": "SOCKS5 proxy port.",
                    "default": 1080,
                    "editor": "number"
                },
                "username": {
                    "type": "string",
                    "title": "Username",
                    "description": "Optional username for proxy authentication.",
                    "editor": "textfield"
                },
                "password": {
                    "type": "string",
                    "title": "Password",
                    "description": "Optional password for proxy authentication.",
                    "editor": "textfield"
                }
            }
        }
    },
    "required": ["emails"]
}
