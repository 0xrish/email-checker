{
    "actorOutputSchemaVersion": 1,
    "title": "Email Checker Output",
    "description": "Output schema for email verification results",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "title": "Email Address",
            "description": "The email address that was verified",
            "template": "{{email}}"
        },
        "input": {
            "type": "string",
            "title": "Input Email",
            "description": "The original email address input",
            "template": "{{input}}"
        },
        "is_reachable": {
            "type": "string",
            "title": "Reachability Status",
            "description": "Overall reachability status: safe, risky, invalid, or unknown",
            "enum": ["safe", "risky", "invalid", "unknown"],
            "template": "{{is_reachable}}"
        },
        "misc": {
            "type": "object",
            "title": "Miscellaneous Details",
            "description": "Miscellaneous information about the email address",
            "template": "{{misc}}"
        },
        "mx": {
            "type": "object",
            "title": "MX Records Details",
            "description": "DNS MX records information",
            "template": "{{mx}}"
        },
        "smtp": {
            "type": "object",
            "title": "SMTP Details",
            "description": "SMTP connection and verification details",
            "template": "{{smtp}}"
        },
        "syntax": {
            "type": "object",
            "title": "Syntax Details",
            "description": "Email address syntax validation details",
            "template": "{{syntax}}"
        },
        "debug": {
            "type": "object",
            "title": "Debug Information",
            "description": "Debugging information about the verification process",
            "template": "{{debug}}"
        },
        "error": {
            "type": "string",
            "title": "Error Message",
            "description": "Error message if verification failed completely",
            "template": "{{error}}"
        }
    }
}
