{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": ["ES2022"],
        "types": ["node"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node-addon/**", "node_modules/**", "**/*.node"]
}
